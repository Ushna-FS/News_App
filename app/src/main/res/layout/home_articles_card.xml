<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:contentPadding="0dp"
    app:rippleColor="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Source and Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNewsSource"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/source_name"
                android:textAppearance="@style/TextAppearance.NewsApp.LabelSmall"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvNewsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/published_time"
                android:textAppearance="@style/TextAppearance.NewsApp.LabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Title and Bookmark -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNewsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/news_title_here"
                android:textAppearance="@style/TextAppearance.NewsApp.TitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end" />

            <ImageView
                android:id="@+id/ivBookmark"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_bookmark_border"
                app:tint="?attr/colorPrimary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvNewsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp"
            android:text="@string/news_desc"
            android:textAppearance="@style/TextAppearance.NewsApp.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Category and Read More Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Category Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categories"
                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                app:chipStrokeWidth="0dp"
                app:chipCornerRadius="28dp"
                app:chipMinHeight="32dp"
                app:chipStartPadding="12dp"
                app:chipEndPadding="12dp"
                android:textAppearance="@style/TextAppearance.NewsApp.LabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Read More Text Button -->
            <TextView
                android:id="@+id/tvReadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_more"
                android:textAppearance="@style/TextAppearance.NewsApp.LabelSmall"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>